<!--title + description-->
<div class="container">
    <h1 class="text-center"><%=pressed.name%></h1>
    <p>
        <%=pressed.page_description%>
    </p>
</div>
<!--/title-->

<!--subcategories-->
<% subcategories.forEach(function (item, index) { %>
<div class="container">
    <div class="row" style="border-top-style: solid;">
        <div class="container">
            <div class="row p-2">
                <h3 class="text-center"><%=item.name%></h3>
            </div>
            <div class="row p-2">
                <img src="/images/<%=item.image %>" class="img-fluid" alt="Responsive image">
            </div>
            <div class="row p-2">
                <p>
                    <%=item.page_description%>
                </p>
            </div>
            <div class="row p-2">
                <a class="btn btn-primary text-white rounded-circle" href="/subcategory/<%=item.id%>" role="button" >View products</a>
            </div>
            <div class="row p-3">
                <span class="border-top-0 border-dark"></span>
            </div>
        </div>
    </div>
</div>
<% }); %>
<!--/subcategories-->
